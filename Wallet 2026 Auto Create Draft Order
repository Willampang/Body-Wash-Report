    var birthdaySheet = spreadsheet.getSheetByName("È°æÂÆ¢ÁîüÊó•");
    if (!birthdaySheet) {
      sheet.getRange(row, 12).setValue("Error: È°æÂÆ¢ÁîüÊó• sheet not found");
