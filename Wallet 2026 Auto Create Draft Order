  qty‰∏∞ÁõõÊ¨æ = Number(qty‰∏∞ÁõõÊ¨æ) || 0;
  qtyÂØåË±™Ê¨æ = Number(qtyÂØåË±™Ê¨æ) || 0;
  qtyÂê∏ÈáëÊ¨æ = Number(qtyÂê∏ÈáëÊ¨æ) || 0;
  
  if (!name) {
    sheet.getRange(row, 12).setValue("Error: No name");
