  if (!email) {
    sheet.getRange(row, 12).setValue("Error: No email provided");
    return;
  }

  if (qty‰∏∞ÁõõÊ¨æ <= 0 && qtyÂØåË±™Ê¨æ <= 0 && qtyÂê∏ÈáëÊ¨æ <= 0) {
    sheet.getRange(row, 12).setValue("No products ordered");
